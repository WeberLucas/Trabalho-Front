{
  "name": "automation-exercise-cypress",
  "version": "1.0.0",
  "private": true,
  "description": "Automation Exercise E2E tests with Cypress, Mochawesome reports, and GitHub Actions",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/*.json -o cypress/reports/merged.json",
    "report:generate": "marge cypress/reports/merged.json -f index -o cypress/reports/html",
    "test": "npm run cypress:run && npm run report:merge && npm run report:generate"
  },
  "devDependencies": {
    "cypress": "^13.12.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}




